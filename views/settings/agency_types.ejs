        <!-- Container-fluid starts-->
        <div class="container-fluid">
          <%- include('../layouts/admin/quick_menu') %>
          <div class="row">
           
            <div class="col-sm-9">
              <div class="card">
                <div class="card-header pb-0">
                    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-original-title="test"
