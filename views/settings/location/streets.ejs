<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layouts/admin/header') %>
</head>

<body>
  <%- include('../../layouts/admin/top-nav') %>
    <%- include('../../layouts/admin/side-bar') %>

      <!-- Page Sidebar Ends-->
      <div class="page-body">
        <div class="container-fluid">
          <div class="page-header">
            <div class="row">
              <div class="col-sm-6">
                <h3>Street</h3>
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
                  <li class="breadcrumb-item"><a href="javascript:;">settings</a></li>
                  <li class="breadcrumb-item active">Street</li>
                </ol>
              </div>
              <div class="col-sm-6">
                
                <!-- Bookmark Ends-->
              </div>
            </div>
          </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid">
          <%- include('../../layouts/admin/quick_menu') %>
          <div class="row">
           
            <div class="col-sm-9">
              <div class="card">
                <div class="card-header pb-0">
                    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-original-title="test"
                    data-bs-target="#exampleModal" >Add Street</button>
                </div>

                <div class="card-body">

                  <div class="table-responsive">

                    <table class="table display" id="basic-10">
                      <thead>
                        <tr>
                          <th>ACTION</th>
                          <th>STREET</th>
                          <th>WARD</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.forEach(function(View) { %>
                          <tr>
                            <td>


                                <div class="btn-group">
                                     <!-- <button class="btn btn-primary" onclick="getUpdate(
