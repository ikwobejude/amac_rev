                    </table>


                  </div>


                </div>


              </div>
            </div>
          </div>
        </div>
        <!-- Container-fluid Ends-->
      </div>

      <div class="modal fade" id="editWard" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">UPDATE STREET </h5>
              <button class="btn-close" type="button" data-bs-dismiss="modal"
                aria-label="Close"></button>
            </div>
            <form class="form theme-form" id="form3">
              <div class="modal-body">

                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label" style="text-align: right;">LGA</label>
                        <div class="col-sm-9">
                          <select name="lga_id" id="elga_id" class="form-control">
                            <option value="">Select Option</option>
                            <% lga.forEach((localGovernment) => { %>
                              <option value="<%= localGovernment.id_lga %>"><%= localGovernment.lga %></option>
                            <%})%>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label" style="text-align: right;">Ward</label>
                        <div class="col-sm-9">
                          <input class="form-control " type="text" name="ward" id="eWard" placeholder="" value="">
                          <input type="hidden" name="id" id="id">
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label" style="text-align: right;">Street Name</label>
                        <div class="col-sm-9">
                          <input class="form-control " type="text" name="street" id="street" placeholder="" value="">
                          <!-- <input type="hidden" name="id" id="id"> -->
                        </div>
                      </div>
                    </div>
                  </div>

                  
                </div>

              </div>
              <div class="modal-footer">
                <!-- <button class="btn btn-primary" type="button" data-bs-dismiss="modal">Close</button> -->
                <button class="btn btn-secondary" type="submit" onclick="create()">Create</button>
              </div>
            </form>
          </div>
        </div>
      </div>


      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">CREATE STREET</h5>
              <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="form theme-form" id="form2">
              <div class="modal-body">

                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label" style="text-align: right;">LGA</label>
                        <div class="col-sm-9">
                          <select name="lga_id" id="lga_id" class="form-control" onchange="getWards()">
                            <option value="">Select Option</option>
                            <% lga.forEach((localGovernment) => { %>
                              <option value="<%= localGovernment.id_lga %>"><%= localGovernment.lga %></option>
                            <%})%>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label" style="text-align: right;">Ward</label>
                        <div class="col-sm-9">
                          <select name="ward" id="ward" class="form-control">

                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label" style="text-align: right;">Street Name</label>
                        <div class="col-sm-9">
                          <input class="form-control " type="text" name="street" id="street" placeholder="" value="">
                          <!-- <input type="hidden" name="id" id="id"> -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
              <div class="modal-footer">
                <!-- <button class="btn btn-primary" type="button" data-bs-dismiss="modal">Close</button> -->
                <button class="btn btn-secondary" type="submit" onclick="create()">Create</button>
              </div>
            </form>
          </div>
        </div>
      </div>


      <%- include('../../layouts/admin/footer') %>
        <script>
          
            let form = document.querySelector('#form2');

            form.addEventListener('submit', async (e) => {
              e.preventDefault()
              //  $('#cover-spin').show(0)
              const dta = {
                lga_id: form.lga_id.value,
                ward: form.ward.value,
                street: form.street.value,
                id: ''
              }
              console.log(dta)
             
              try {
                let res = await fetch('/location/street', {
                  method: "POST",
                  body: JSON.stringify(dta),
                  headers: { 'Content-Type': 'application/json' }
                })

                const data = await res.json();

                
                
                $('#cover-spin').hide(0)
                if (data.status == "error") {
                    $.notify('<i class="fa fa-warning"></i><strong>' + data.message + '</strong>.', {
                      type: 'danger',
                      allow_dismiss: true,
                      delay: 5000,
                      showProgressbar: true,
                      timer: 300
                    });
                } else {
                    
                    var notify = $.notify('<i class="fa fa-bell-o"></i><strong>' + data.message + '</strong>', {
                      type: 'theme',
                      allow_dismiss: true,
                      delay: 2000,
                      showProgressbar: true,
                      timer: 1000
                    });

                    setTimeout(function () {
                      notify.update('message', '<i class="fa fa-bell-o"></i><strong>Redirecting Back</strong>....');
                      location.assign('/location/street')
                    }, 1000);
                }
              } catch (error) {
                console.log(error)
                $('#cover-spin').hide(0)
                var notify = $.notify('<i class="fa fa-warning"></i><strong>' + error.message + '</strong>.', {
                    type: 'danger',
                    allow_dismiss: true,
                    delay: 5000,
                    showProgressbar: true,
                    timer: 300
                  });
              }
            })
          


          let form3 = document.querySelector('#form3');
          form3.addEventListener('submit', async(e) => {
            e.preventDefault();

            const dta = {
                lga_id: form3.lga_id.value,
                ward: form3.ward.value,
                id: form3.id.value
              }
              console.log(dta)
             
              try {
                let res = await fetch('/location/ward', {
                  method: "put",
                  body: JSON.stringify(dta),
                  headers: { 'Content-Type': 'application/json' }
                })

                const data = await res.json();

                
                
                $('#cover-spin').hide(0)
                if (data.status == "error") {
                    $.notify('<i class="fa fa-warning"></i><strong>' + data.message + '</strong>.', {
                      type: 'danger',
                      allow_dismiss: true,
                      delay: 5000,
                      showProgressbar: true,
                      timer: 300
                    });
                } else {
                    
                    var notify = $.notify('<i class="fa fa-bell-o"></i><strong>' + data.message + '</strong>', {
                      type: 'theme',
                      allow_dismiss: true,
                      delay: 2000,
                      showProgressbar: true,
                      timer: 1000
                    });

                    setTimeout(function () {
                      notify.update('message', '<i class="fa fa-bell-o"></i><strong>Redirecting Back</strong>....');
                      location.assign('/location/ward')
                    }, 1000);
                }
              } catch (error) {
                console.log(error)
                $('#cover-spin').hide(0)
                var notify = $.notify('<i class="fa fa-warning"></i><strong>' + error.message + '</strong>.', {
                    type: 'danger',
                    allow_dismiss: true,
                    delay: 5000,
                    showProgressbar: true,
                    timer: 300
                  });
              }
          })
          function getUpdate(ward, lgs, id){
            $('#eWard').val(ward);
            $(`#elga_id option[value='${lgs}']`).prop('selected', true);
            $('#id').val(id);

            $('#editWard').modal('show');
          }

          
          
          async function getWards(){
            const lga_id = document.getElementById('lga_id').value;
            const res = await fetch('/get_wards?lgaId='+lga_id)
            const data = await res.json();
            console.log(data)
            getRecords(data.ward)
           }

           function getRecords(records) {
              console.log(records.length)


              if (records.length > 0) {
                  var html = "";
                  html += '<option disabled selected value> SELECT WARD</option>';
                  for (var a = 0; a < records.length; a++) {
                      html += '<option value="' + records[a].ward_id + ' ">' + records[a].ward + '</option>';
                  }
                  $('#ward').html(html);
              } else {
                  var html = "";
                  html += '<option disabled selected value></option>';
                  $('#ward').html(html);
              }

          }
        </script>
</body>

</html>