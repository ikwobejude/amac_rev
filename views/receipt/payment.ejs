<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../layouts/admin/header') %>
    </head>
    <body>
        <%- include('../layouts/admin/top-nav') %>
        <% if (user.group_id == 190){%>
          <%- include('../layouts/selfassessment/side-bar') %>
        <% } else {%>
          <%- include('../layouts/admin/side-bar') %>
        <% }%>

            <!-- Page Sidebar Ends--> 
            <div class="page-body">
                <div class="container-fluid">
                  
                <div class="page-header">
                    <div class="row">
                    <div class="col-sm-6">
                        <h3>Payment Invoices</h3>
                        <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Payment Invoices</li>
                        </ol>
                    </div>
                    <div class="col-sm-6">
                        <!-- Bookmark Start-->
                        <div class="bookmark">
                        <ul>
                            <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Tables"><i data-feather="inbox"></i></a></li>
                            <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Chat"><i data-feather="message-square"></i></a></li>
                            <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Icons"><i data-feather="command"></i></a></li>
                            <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Learning"><i data-feather="layers"></i></a></li>
                            <li><a href="javascript:void(0)"><i class="bookmark-search" data-feather="star"></i></a>
                            <form class="form-inline search-form">
                                <div class="form-group form-control-search">
                                <input type="text" placeholder="Search..">
                                </div>
                            </form>
                            </li>
                        </ul>
                        </div>
                        <!-- Bookmark Ends-->
                    </div>
                    </div>
                </div>
                </div>
                <!-- Container-fluid starts-->
             
                <div class="container-fluid">
                  <% if (user.group_id == 190){%>
                    <% } else if (user.group_id == 200 || user.group_id == 205 || user.group_id == 121212) {%>
                        <%- include('../layouts/admin/ofice_user_quick_menu') %>
                    <% } else {%>
                    <% }%>
                <div class="row">
                    <div class="col-sm-12">
                      <div class="ribbon-wrapper card">
                        <div class="ribbon ribbon-clip ribbon-success">Payment Checkout Point</div>
                        
                        <div class="card-body">
                          <form class="form theme-form" action="/api/get_payment_page" method="post" id="makePayment" >
                            <div class="card-body">
                              <div class="row">
                                <div class="col">
                                  <div class="mb-3">
                                    <label class="form-label" for="colFormLabelSm26">Full Name</label>
                                    <input class="form-control form-control-lg" name="full_name" value="<%= taxp.taxpayer_name %>" id="full_name" type="text" placeholder="col-form-label-lg" required>
                                  </div>
                                </div>
                              </div>
                              <div class="row">
                                <div class="col">
                                  <div class="mb-3">
                                    <label class="form-label" for="colFormLabelSm26">Emil</label>
                                    <input class="form-control form-control-lg" id="email" name="email" value="<%= taxp.email_address %>"  type="email" placeholder="Enter email address" required>
                                  </div>
                                </div>
                              </div>
                              <div class="row">
                                <div class="col">
                                  <div class="mb-3">
                                    <label class="form-label" for="colFormLabelSm26">Amount</label>
                                    <input class="form-control form-control-lg" id="amount" readonly name="amount" value="<%= assess.assessment_amount %>" type="text" placeholder="col-form-label-lg">
                                    <input type="hidden" name="invoice_number" value="<%= assess.invoice_number %>">

                                  </div>
                                </div>
                              </div>
                              
                            </div>
                            <div class="card-footer text-end">
                              <button class="btn btn-primary" type="submit" id="subPay">Proceed to payment</button>
                              <input class="btn btn-light" type="reset" value="Cancel">
                            </div>
                          </form>
                             
                        </div>
                    </div>
                    </div>
                </div>
                </div>
                <!-- Container-fluid Ends-->
            </div>


        <%- include('../layouts/admin/footer') %>
        <script src="/payment.js"></script>
       
        
    </body>

</html>