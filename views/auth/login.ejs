    <section >        
    
      <div class="container-fluid p-0">
          
        <div class="row">
            <div id="cover-spin"></div>
          <div class="col-12"> 
          
            <div class="login-card">
                
              <form class="theme-form login-form">
                  
                <h4 style=" text-align: center;">
                    <img src="/a/img/fct.png" alt="" height="60" width="60">
                    Login</h4>
                <h6 style=" text-align: center;"></h6>
                <!-- <div class="error"></div> -->
                <div class="form-group">
                  <label>Email Address/Tin</label>
                  <div class="input-group"><span class="input-group-text"><i style="color: #ff3f3f;" class="icon-user"></i></span>
