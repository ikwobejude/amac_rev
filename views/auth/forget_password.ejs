    <section>         
      <div class="container-fluid p-0"> 
        <div class="row m-0">
          <div class="col-12 p-0">    
            <div class="login-card">              
              <div class="login-main"> 
                <form class="theme-form login-form" id="forget">
                  <!-- <h4 class="mb-3">Reset Your Password</h4> -->
                  <div class="form-group" >
                    <label>ENTER YOU MOBILE NUMBER/EMAIL OR TIN</label>
                    <div class="row">
                      
                      <div class="col-12 col-sm-12">
                        <div class="form-group">
                            <div class="input-group"><span class="input-group-text"><i class="icon-align-justify"></i></span>
                              <input class="form-control" type="text" name="forgetPemails" required="" placeholder="">
                            </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Send OTO</button>
                  </div>
                  <div class="form-group"><span class="reset-password-link">If don't receive OTP?  <a class="btn-link text-danger" href="javascript:void(0)">Resend</a></span></div>
                </form>
                  <!-- <h6>Create Your Password</h6> -->
                  <form  id="Verify">
                    <div class="form-group">
                        <div class="input-group"><span class="input-group-text"><i class="icon-lock"></i></span>
                        <input class="form-control" type="text" name="otp" id="otp" required="" >
                        <div class="show-hide"><span class="show"></span></div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Submit  </button>
                    </div>
