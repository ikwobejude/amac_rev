    <script src="/assets/js/script.js"></script>
    <!-- login js-->
    <!-- Plugin used-->

    <script>
        let form = document.querySelector('#forget')
        // const formerror = document.querySelector('.error');
        form.addEventListener('submit', async(e) => {
            e.preventDefault();
            // formerror.textContent = '';
    
    
            const dt = form.forgetPemails.value;
            // const password = form.password.value;
    
            console.log(dt)
    
            try {
                let res = await fetch('/forget_password', {
                    method: "POST",
                    body: JSON.stringify({dt: dt}),
                    headers: {'Content-Type': 'application/json'}
                })
    
                const data = await res.json(); 
                // console.log(data)
                if(data.err) {
                    // formerror.textContent = data.err
                    var notify = $.notify('<i class="fa fa-warning"></i><strong>' +data.err+'</strong>.', {
                            type: 'danger',
                            allow_dismiss: true,
                            delay: 5000,
                            showProgressbar: true,
                            timer: 300
                        });
                } else {
                    
                        var notify = $.notify('<i class="fa fa-bell-o"></i><strong>Sending otp to your email address...</strong>', {
                            type: 'theme',
                            allow_dismiss: true,
                            delay: 10000,
                            showProgressbar: true,
                            timer: 10000
                        });

                        setTimeout(function() {
                            notify.update('message', '<i class="fa fa-bell-o"></i><strong>OTP SENT TO YOUR EMAIL ADDRESS</strong>');
                        }, 1000);
                }
            } catch (error) {
                console.log(error)
                var notify = $.notify('<i class="fa fa-warning"></i><strong>' +error+'</strong>.', {
                        type: 'danger',
                        allow_dismiss: true,
                        delay: 5000,
                        showProgressbar: true,
                        timer: 300
                    });
            }
        })


        let Verify = document.querySelector('#Verify')
        // const formerror = document.querySelector('.error');
        Verify.addEventListener('submit', async(e) => {
            e.preventDefault();
            // formerror.textContent = '';
    
    
            const dt = Verify.otp.value;
            // const password = form.password.value;
    
            console.log(dt)
    
            try {
                let res1 = await fetch('/verify_otp', {
                    method: "POST",
                    body: JSON.stringify({otp: dt}),
                    headers: {'Content-Type': 'application/json'}
                })
    
                const data = await res1.json(); 
                // console.log(data)
                if(data.err) {
                    // formerror.textContent = data.err
                    var notify = $.notify('<i class="fa fa-warning"></i><strong>' +data.err+'</strong>.', {
                            type: 'danger',
                            allow_dismiss: true,
                            delay: 5000,
                            showProgressbar: true,
                            timer: 300
                        });
                } else {
                    
                        var notify = $.notify('<i class="fa fa-bell-o"></i><strong>Matched</strong>', {
                            type: 'theme',
                            allow_dismiss: true,
                            delay: 1000,
                            showProgressbar: true,
                            timer: 1000
                        });

                        setTimeout(function() {
                            notify.update('message', '<i class="fa fa-bell-o"></i><strong></strong>');
                            location.assign('/reset_password?opt='+data.otp)
                        }, 1000);
                }
            } catch (error) {
                console.log(error)
                var notify = $.notify('<i class="fa fa-warning"></i><strong>' +error+'</strong>.', {
                        type: 'danger',
                        allow_dismiss: true,
                        delay: 5000,
                        showProgressbar: true,
                        timer: 300
                    });
            }
        })
    </script>
